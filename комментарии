  // or
 //import * as goodsAPI from './api/goods';
class App extends React.Component {
  state = {
    goods: [],
  }

  showGoods = (callback) => {
    callback() // Заготовленный метод передаётся по клику, перед этим импортируется из './api/goods
      .then((goods) => {
        this.setState({
          goods, // goods: goods
        });
      });
  }

  render() {
    const { goods } = this.state;
  
    return (
      <main>
        <h1>Dynamic list of Goods</h1>
        <button
          type="button"
          //Каждый импортированный методпередаётся коллбэком по клику на свою кнопку, чтобы получать результаты промисов в одной функции
          onClick={() => this.showGoods(getAll)}
        >
          Load all goods
        </button>
        <button
          type="button"
          onClick={() => this.showGoods(get5First)}
        >
          Load 5 first goods
        </button>
        <button
          type="button"
          onClick={() => this.showGoods(getRed)}
        >
          Load red goods
        </button>
        <GoodsList goods={goods} />
      </main>
    );
  }
}

export default App;
